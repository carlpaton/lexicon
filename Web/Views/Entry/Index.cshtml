@model IEnumerable<Web.Models.EntryViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Entry</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@if (TempData["message"] != null)
{
    <div class="text-info">
        @TempData["message"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LexiconFunction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recommendation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubCategoryId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LexiconFunction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recommendation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DropDownListFor(modelItem => item.CategoryId, (List<SelectListItem>)ViewData["Category_SelectList"], new { @class = "form-control", @disabled = "disabled" })
            </td>
            <td>
                @Html.DropDownListFor(modelItem => item.SubCategoryId, (List<SelectListItem>)ViewData["SubCategory_SelectList"], new { @class = "form-control", @disabled = "disabled" })
            </td>
            <td>
                <div class="cp-link">
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id },
                    new { onclick = "return confirm('Are you sure you want to delete this entry?');" })
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>