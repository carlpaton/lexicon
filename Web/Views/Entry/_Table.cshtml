@model IEnumerable<Web.Models.EntryViewModel>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LexiconFunction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recommendation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubCategoryId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LexiconFunction)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Recommendation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.DropDownListFor(modelItem => item.CategoryId, (List<SelectListItem>)ViewData["Category_SelectList"], new { @class = "form-control", @disabled = "disabled" })
                </td>
                <td>
                    @Html.DropDownListFor(modelItem => item.SubCategoryId, (List<SelectListItem>)ViewData["SubCategory_SelectList"], "n/a", new { @class = "form-control", @disabled = "disabled" })
                </td>
                <td>
                    <div class="cp-link">
                        <form asp-action="Delete" asp-route-id="@item.Id">
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Index" asp-route-id="@item.Id" asp-controller="EntryPlatform">Platform</a> |
                            <input type="submit" value="Delete" class="btn-link" onclick="return confirm('Are you sure you want to delete this entry?');" />
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>